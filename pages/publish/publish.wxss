/* pages/publish/publish.wxss */
.container{
  padding: 15rpx;
}
.title{
  background-color: #f0f0f0;
  padding: 15rpx;
  text-align: center;
}
.items{
  margin: 30rpx 0;
  font-size: 35rpx;
  color: #666;
  background-color: #fcfcfc;
}
.section{
  padding: 15rpx;
  border-bottom: 1px solid #f0f0f0;
}
.flex_box{
  display: flex;  
  min-height: 2em;
}
.flex_item{
  flex: 1;
}
.flex_box>label{
  flex: 1;
  vertical-align: middle;
}
.flex_box>label>radio{
  transform: scale(0.8);
}

.section>input{
  flex: 1;
  text-align:center;
}
.section__title{
  width: 8em;
  line-height: 2em;
}
.section button[type=primary][plain] {
  color:rgb(6, 136, 60);
  border-color:#ddd;
  background-color: #fafafa;
}
.section>text{
  display: block;
  line-height: 1.8em;
  font-size: 30rpx;
  color:#999;
}

.btn-area button[type=primary][plain]{
  margin: 30rpx 50rpx;
  color: #fff;
  background-color: rgb(6, 136, 60);
}
.map_box{
  margin: 50rpx auto;
  border: 1px solid #ddd;
}
.red_txt{
  color: #FF0000DD;
}