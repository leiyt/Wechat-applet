/**index.wxss**/
.top{
  width: 100%;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  text-align: center;
}
.img_box{
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}
.img_box image{
  clip:rect(0 0 400rpx 400rpx);
}
.top text{
  line-height: 2em;
  color: #666;
}
.des{
  font-size: 35rpx;
}
.content{
  text-align: center;
}
.content button[type=primary][plain]{
  margin: 30rpx 50rpx;
  color: #fff;
  background-color: rgb(6, 136, 60);
}
.bottom{
  margin-top: 60rpx;
  padding: 30rpx;
  text-align: center;
  color: #666;
  font-size: 35rpx;
}
.bottom text{
  line-height: 2em;
}